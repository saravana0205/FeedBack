<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fillViewport="true"
                                       tools:context=".FloorSelectionActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/rootLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/toolBar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_70sdp"
			android:background="@drawable/background"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/logo"
			android:layout_width="@dimen/_60sdp"
			android:layout_height="@dimen/_60sdp"
			android:src="@drawable/logo"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/toolBar" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/nameLogo"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_40sdp"
			android:src="@drawable/logo_name"
			app:layout_constraintTop_toBottomOf="@+id/logo" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/_10sdp"
			android:text="@string/select_floor"
			app:layout_constraintVertical_bias="0.1"
			android:id="@+id/selectFloor"
			android:textColor="@android:color/black"
			android:textSize="@dimen/font_size_xxlarge"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/nameLogo" />

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/firstFloor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/_10sdp"
			android:clickable="true"
			android:clipToPadding="false"
			android:elevation="@dimen/_4sdp"
			android:focusable="true"
			android:foreground="?android:selectableItemBackground"
			app:cardUseCompatPadding="true"
			app:layout_constraintTop_toBottomOf="@+id/selectFloor">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/image">

				<TextView
					android:id="@+id/txt_floor_3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_15sdp"
					android:text="Floor 1: JR - Retail"
					android:textAlignment="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/font_size_xxlarge"
					android:textStyle="bold"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/secondFloor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/_10sdp"
			android:clickable="true"
			android:clipToPadding="false"
			android:elevation="@dimen/_4sdp"
			android:focusable="true"
			android:foreground="?android:selectableItemBackground"
			app:cardUseCompatPadding="true"
			app:layout_constraintTop_toBottomOf="@+id/firstFloor">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/image">

				<TextView
					android:id="@+id/txt_floor_2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_15sdp"
					android:text="Floor 2: JR - Wholesale"
					android:textAlignment="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/font_size_xxlarge"
					android:textStyle="bold"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/thirdFloor"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/_10sdp"
			android:clickable="true"
			android:clipToPadding="false"
			android:elevation="@dimen/_4sdp"
			android:focusable="true"
			android:foreground="?android:selectableItemBackground"
			app:cardUseCompatPadding="true"
			app:layout_constraintVertical_bias="0"
			app:layout_constraintTop_toBottomOf="@+id/secondFloor">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/image">

				<TextView
					android:id="@+id/txt_floor_1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/_15sdp"
					android:text="Floor 3: ACS"
					android:textAlignment="center"
					android:textColor="@android:color/black"
					android:textSize="@dimen/font_size_xxlarge"
					android:textStyle="bold"
					app:layout_constraintTop_toTopOf="parent" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</com.google.android.material.card.MaterialCardView>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
