<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:statusBarColor">#403B82</item>
		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="ChipTextStyle_Selected">
		<item name="android:textSize">10sp</item>
		<item name="android:background">#FFDF00</item>
	</style>

	<style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowSoftInputMode">adjustResize</item>
	</style>

	<style name="AlertDialogTheme">
		<item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
		<item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
	</style>

	<style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="backgroundTint">@android:color/holo_green_light</item>
		<item name="rippleColor">@color/colorAccent</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="backgroundTint">@android:color/holo_red_light</item>
		<item name="rippleColor">@color/colorAccent</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>
